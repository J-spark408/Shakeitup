// Variables for controlling the glass filling effect
fill_amount = 0;              // Current fill level (percentage)
fill_speed = 5;              // How much the fill level increases per click
max_fill_amount = 1000;         // Maximum fill level
is_filling = false;           // Flag to track if the glass is currently filling

// Variables for color transition (optional)
start_color = c_white;        // Initial color of the empty glass (change as needed)
end_color = c_blue;           // Target color when the glass is full (change as needed)
blend_factor = 0;             // Controls the interpolation between start and end colors
blend_speed = 0.01;            // How much the blend factor increases per step












